{
  "name": "multi_chain_dex_arbitrage",
  "version": "1.0.0",
  "description": "Multi-chain DEX arbitrage trading bot",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "start:bot": "node multiChainBot.js",
    "setup:db": "node scripts/setupDatabase.js",
    "deploy:contract": "hardhat run scripts/deployArbitrage.js",
    "build:ui": "cd frontend && npm run build",
    "dev:ui": "cd frontend && npm run dev",
    "test": "hardhat test",
    "format": "prettier --write '**/*.{js,jsx,ts,tsx,json,md}'",
    "lint": "eslint . --ext .js",
    "Alltest": "hardhat test",
    "test:unit": "hardhat test test/unit/**/*.js",
    "test:integration": "hardhat test test/integration/**/*.js",
    "test:contracts": "hardhat test test/UniversalArbitrage.js",
    "coverage": "hardhat coverage"
  },
  "dependencies": {
    "@balancer-labs/v2-interfaces": "0.4.0",
    "@openzeppelin/contracts": "^4.9.6",
    "@uniswap/v2-core": "1.0.1",
    "@uniswap/v2-periphery": "1.1.0-beta.0",
    "big.js": "^6.2.1",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "ethers": "^6.6.2",
    "express": "^4.18.2",
    "morgan": "^1.10.0",
    "socket.io": "^4.7.2",
    "sqlite": "^5.0.1",
    "sqlite3": "^5.1.7",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.4",
    "@nomicfoundation/hardhat-ethers": "^3.0.5",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.10",
    "@nomicfoundation/hardhat-toolbox": "4.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.4",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^4.3.11",
    "@types/mocha": "^10.0.6",
    "chai": "^4.4.1",
    "eslint": "^8.57.0",
    "hardhat": "^2.19.4",
    "hardhat-gas-reporter": "^1.0.10",
    "nodemon": "^3.0.3",
    "prettier": "^3.2.5",
    "solidity-coverage": "^0.8.6",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.2",
    "typescript": "^5.3.3"
  }
}
